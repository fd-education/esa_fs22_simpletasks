<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditTextStepActivity">

    <ImageButton
        android:id="@+id/backButton_audioStep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/sidesPadding"
        android:layout_marginTop="@dimen/sidesPadding"
        android:backgroundTint="#00000000"
        android:contentDescription="@string/back"
        android:onClick="onBackClicked"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrow_back_black_24dp"
        app:tint="?colorOnBackground" />

    <TextView
        android:id="@+id/textView_audioStepTitle"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_marginStart="@dimen/sidesPadding"
        android:layout_marginEnd="@dimen/sidesPadding"
        android:text="@string/edit_step"
        android:textAlignment="center"
        android:textColor="?colorOnBackground"
        android:textSize="@dimen/h2"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/backButton_audioStep"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/backButton_audioStep" />

    <ImageView
        android:id="@+id/imageView_audioStepImage"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_marginTop="48dp"
        android:contentDescription="@string/step_title_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.379"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_audioStepTitle"
        app:srcCompat="@drawable/image_placeholder"
        tools:ignore="ImageContrastCheck" />

    <EditText
        android:id="@+id/editText_audioStepTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:text="@string/step_title"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_audioStepImage"
        android:autofillHints="" />

    <ImageButton
        android:id="@+id/imageButton_takeImageAudioStep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:background="@drawable/rounded_corner_background"
        android:contentDescription="@string/change_image"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:onClick="onTitleImageClicked"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_audioStepImage"
        app:layout_constraintStart_toEndOf="@+id/imageView_audioStepImage"
        app:layout_constraintTop_toTopOf="@+id/imageView_audioStepImage"
        app:srcCompat="@android:drawable/ic_menu_camera"
        tools:ignore="ImageContrastCheck" />

    <Button
        android:id="@+id/button_saveAudioStep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:background="@drawable/rounded_corner_background"
        android:onClick="onSaveClicked"
        android:text="@string/save"
        app:backgroundTint="?buttonBarPositiveButtonStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_startRecordingAudioStep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="88dp"
        android:text="@string/start_recording"
        app:layout_constraintBottom_toTopOf="@+id/button_saveAudioStep"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_pauseAudioStep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Pause"
        app:layout_constraintBottom_toBottomOf="@+id/button_playAudioStep"
        app:layout_constraintEnd_toEndOf="@+id/button_startRecordingAudioStep"
        app:layout_constraintStart_toEndOf="@+id/button_playAudioStep"
        app:layout_constraintTop_toTopOf="@+id/button_playAudioStep"
        app:layout_constraintVertical_bias="0.0" />

    <SeekBar
        android:id="@+id/seekBar_audioStepRecording"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/button_startRecordingAudioStep"
        app:layout_constraintEnd_toEndOf="@+id/button_startRecordingAudioStep"
        app:layout_constraintStart_toStartOf="@+id/button_startRecordingAudioStep"
        app:layout_constraintTop_toBottomOf="@+id/editText_audioStepTitle"
        app:layout_constraintVertical_bias="0.613" />

    <Button
        android:id="@+id/button_playAudioStep"
        android:layout_width="94dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:text="Play"
        app:layout_constraintBottom_toTopOf="@+id/button_startRecordingAudioStep"
        app:layout_constraintEnd_toStartOf="@+id/button_pauseAudioStep"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/button_startRecordingAudioStep"
        app:layout_constraintTop_toBottomOf="@+id/seekBar_audioStepRecording" />

</androidx.constraintlayout.widget.ConstraintLayout>