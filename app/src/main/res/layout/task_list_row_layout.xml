<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/taskListItem"
    android:layout_width="fill_parent"
    android:layout_height="100dp"
    android:background="@color/accent_blue"
    android:padding="@dimen/elementPadding"
    android:layout_marginVertical="@dimen/halfElementPadding">

    <ImageView
        android:id="@+id/taskImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/titleTask"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/elementPadding"
        android:text="Task Title"
        android:textAlignment="viewStart"
        android:textColor="@color/white"
        android:textSize="@dimen/h2"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/taskImage"
        app:layout_constraintTop_toTopOf="@+id/task_image" />

    <TextView
        android:id="@+id/countStepsIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/elementPadding"
        android:text="X Steps"
        android:textColor="@color/white"
        android:textSize="@dimen/p"
        android:typeface="sans"
        app:layout_constraintEnd_toEndOf="@+id/titleTask"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/titleTask"
        app:layout_constraintTop_toBottomOf="@+id/titleTask" />

    <ImageButton
        android:id="@+id/editTaskButton"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:backgroundTint="@color/bordeaux"
        android:contentDescription="skip task"
        android:scaleType="center"
        app:layout_constraintBottom_toBottomOf="@+id/task_image"
        app:layout_constraintEnd_toEndOf="@+id/titleTask"
        app:layout_constraintTop_toTopOf="@+id/countStepsIndicator"
        app:srcCompat="@drawable/skip_next_black_24dp"
        app:tint="@color/white" />


</androidx.constraintlayout.widget.ConstraintLayout>